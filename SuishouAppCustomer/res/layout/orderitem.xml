<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/icon_head" />

        <TextView
            android:id="@+id/TV_Oproname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/imageView1"
            android:text="商品名"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/Tv_Oprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/Tv_Onum"
            android:layout_below="@+id/Tv_Onum"
            android:text="总价"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/Tv_Onum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="38dp"
            android:text="数目"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/Tv_Ojudgment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/Tv_Oprice"
            android:layout_below="@+id/Tv_Oprice"
            android:text="评价"
            android:textColor="#EA2000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Tv_Onum"
            android:layout_toRightOf="@+id/Tv_Oprice"
            android:text="元"
            android:textSize="20sp" />

    </RelativeLayout>

</LinearLayout>
